{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "g++ debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "/tmp/a.out",
      "args": [],
      "externalConsole": false,
      "stopAtEntry": false,
      "cwd": "${fileDirname}", // Workind dir where the file is placed
      "environment": [],
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "gcc build",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}