<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.marcodifrancesco.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginCheck</servlet-name>
        <servlet-class>com.marcodifrancesco.LoginCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterCheck</servlet-name>
        <servlet-class>com.marcodifrancesco.RegisterCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GalleryGet</servlet-name>
        <servlet-class>com.marcodifrancesco.GalleryGet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GalleryAdd</servlet-name>
        <servlet-class>com.marcodifrancesco.GalleryAdd</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutCheck</servlet-name>
        <servlet-class>com.marcodifrancesco.LogoutCheck</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetLastVisited</servlet-name>
        <servlet-class>com.marcodifrancesco.GetLastVisited</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginCheck</servlet-name>
        <url-pattern>/LoginCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterCheck</servlet-name>
        <url-pattern>/RegisterCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GalleryGet</servlet-name>
        <url-pattern>/GalleryGet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GalleryAdd</servlet-name>
        <url-pattern>/GalleryAdd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutCheck</servlet-name>
        <url-pattern>/LogoutCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetLastVisited</servlet-name>
        <url-pattern>/GetLastVisited</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
